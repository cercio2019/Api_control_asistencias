<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto ">
            <div class="card">
                <div class="card-header">
                    <h4>Departamentos</h4>
                </div>
                <div class="card-body">
                    <table class="table" >
                        <thead>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th>Cantidad empleados </th>
                            <th>Limite empleados </th>
                            <th>Estatus</th>
                        </thead>
                        <tbody>
                         {{#each  resultados }}
                                <tr>
                                    <td>{{id}}</td>
                                    <td>{{nombre}}</td>
                                    <td>{{numero_empleados}}</td>
                                    <td>{{limite_empleados}}</td>
                                    <td>{{estatus}}</td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4 mx-auto ">
            <button type="button" data-toggle="modal" data-target="#exampleModal" class="btn btn-block btn-primary" >
                Registrar nuevo departamento
            </button>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"> Registrar Nuevo Departamento </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="newDep" method="POST">
            <div class="form-group">
                <label for="">Nombre</label>
                <input type="text" class="form-control" name="nombre" id="nombe_dep"  >
            </div>
             <div class="form-group">
                <label for="">Limite de empleados</label>
                <input type="number" class="form-control" name="limite_empleados" id="limite_dep"  >
            </div>

            <div class="form-group">
                <button class="btn btn-primary btn-block " >
                    Registrar
                </button>
            </div>
             
        </form>
      </div>
    </div>
  </div>
</div>